{
  "name": "cds-agent",
  "version": "0.1.0",
  "description": "CDSAgent - LLM orchestration layer for code retrieval",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./client": {
      "import": "./src/client/jsonrpc.ts",
      "types": "./src/client/jsonrpc.ts"
    },
    "./types": {
      "import": "./src/types/api.ts",
      "types": "./src/types/api.ts"
    }
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "start": "bun run src/main.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
