# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-...

# Optional: OpenAI API key (for multi-SDK support in v0.2.0)
OPENAI_API_KEY=sk-...

# Agent configuration
AGENT_MAX_ITERATIONS=10
AGENT_LOG_DIR=./logs
AGENT_STREAM_MODE=true

# CDS-Tools CLI path
CLI_PATH=/usr/local/bin/cds

# JSON-RPC Service Configuration
# The URL of the CDS-Index JSON-RPC service endpoint
CDS_INDEX_SERVICE_URL=http://localhost:9876/rpc
# Legacy alias (deprecated - use CDS_INDEX_SERVICE_URL)
INDEX_SERVICE_URL=http://localhost:3030

# Request timeout in milliseconds (default: 30000 = 30 seconds)
CDS_REQUEST_TIMEOUT_MS=30000

# Retry delays for network failures (comma-separated milliseconds)
# Default: 1000,2000,4000 (exponential backoff: 1s, 2s, 4s)
CDS_RETRY_DELAYS_MS=1000,2000,4000

# Logging Configuration
# Log level: debug, info, warn, error, silent (default: info)
CDS_LOG_LEVEL=info
# Alternative: LOG_LEVEL can also be used
# LOG_LEVEL=info

# Enable detailed request/response logging (default: false)
# Warning: This will log sensitive data including request payloads
CDS_ENABLE_REQUEST_LOGGING=false
